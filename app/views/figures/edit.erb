<h1><%=@figure.name%></h1>
<form method="POST" action='/figures/<%=@figure.id%>'>
  <input type='hidden' name='_method' value='PATCH'/>
  <label>Name</label>
  <input type=text value="<%=@figure.name%>" id = "figure_name" name = "figure[name]"><br>
  <h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" value = "<%=landmark.id%>" name="figure[landmark_ids][]" <%= 'checked' if @figure.landmarks.include?(landmark)%> ><%=landmark.name%><br>
  <% end %>
  New Landmark: <input type="text" name="landmark[name]" id="new_landmark">
  <h2>Titles</h2>
  <% Title.all.each do |title| %>
    <input type="checkbox" value = "<%=title.id%>" name="figure[title_ids][]" <%= 'checked' if @figure.titles.include?(title)%> ><%=title.name%><br>
  <% end %>
  New Title: <input type="text" name="title[name]" id="new_title">
  <br>
  <input type="submit" value="Edit Figure">
</form>
