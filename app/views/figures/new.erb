<h1>Create a New Figure!</h1>
<form action="/figures" method="POST">
  <p>Name: <input type="text" id="figure_name" name="figure[name]"><br>
  <h2>Titles</h2>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value=<%=title.id%>><%=title.name%><br>
  <% end %>
  <input type="checkbox" name="other1" value=1>Other: <input type="text" name="title[name]" id="new_title"><br>
  <h2>Landmarks</h2>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value=<%=landmark.id%>><%=landmark.name%><br>
  <% end %>
    <input type="checkbox" name="other2" value=1>Other: <input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Create New Figure">
</form>
